<?xml version="1.0"?>
<config>
    <log>
        <ident>default</ident>
        <type>console</type>
        <level>7</level>
    </log>
    <propel>
        <datasources default="default">
            <datasource id="default">
                <adapter>mysql</adapter>
                <connection>
                    <classname>DebugPDO</classname>
                    <dsn>mysql:host=localhost;dbname=upcheck</dsn>
                    <user>root</user>
                    <password>1769root</password>
                    <options>
                        <option id="ATTR_PERSISTENT">false</option>
                    </options>
                    <attributes>
                        <option id="ATTR_EMULATE_PREPARES">true</option>
                        <option id="PROPEL_ATTR_CACHE_PREPARES">true</option>
                    </attributes>
                    <settings>
                        <setting id="charset">utf8</setting>
                        <setting id="queries">
                        </setting>
                    </settings>
                </connection>
                <slaves>
                </slaves>
            </datasource>
        </datasources>
    </propel>
    <profiler class="\Runtime\Runtime\Util\Profiler">
        <slowTreshold>0.2</slowTreshold>
        <details>
            <time name="Time" precision="3" pad="8" />
            <mem name="Memory" precision="3" pad="8" />
        </details>
        <innerGlue>: </innerGlue>
        <outerGlue> | </outerGlue>
    </profiler>
</config>
